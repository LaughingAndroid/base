<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Content">
        <item name="android:color">@color/text_color_gray</item>
    </style>

    <style name="Text.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <style name="Text.Secondary">
        <item name="android:color">@color/text_color_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/point_diameter</item>
        <item name="android:minWidth">@dimen/point_diameter</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/text_color_white_primary</item>
        <item name="android:background">@drawable/point_red</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="ButtonColored" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>

    <style name="Edit" parent="Text">
        <item name="android:textColorHint">@color/text_color_light_gray</item>
    </style>

    <style name="Edit.White">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/edit_white_rounded_bg</item>
    </style>

    <style name="ActionItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/divider_color_gray</item>
    </style>

    <style name="Line.Vertical">
        <item name="android:layout_width">0.6dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Light_White">
        <item name="android:background">@color/divider_color_white</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="ListView.TransparentDivider">
        <item name="android:divider">@color/transparent</item>
    </style>

    <style name="SeekBar" parent="android:Widget.SeekBar">
        <item name="android:minHeight">2dp</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomSheet" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnim</item>
    </style>

    <style name="BottomSheetAnim" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="Line.White">
        <item name="android:background">@color/white</item>
    </style>

    <dimen name="point_diameter">16dp</dimen>
</resources>
