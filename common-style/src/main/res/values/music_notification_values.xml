<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="music_notification_large_icon_size">114dip</dimen>

    <color name="music_notification_line">#1effffff</color>

    <!-- music notification drawable -->
    <drawable name="ic_music_notification_play">@drawable/ic_music_notification_play_white</drawable>
    <drawable name="ic_music_notification_pause">@drawable/ic_music_notification_pause_white</drawable>
    <drawable name="ic_music_notification_pre">@drawable/ic_music_notification_pre_white</drawable>
    <drawable name="ic_music_notification_next">@drawable/ic_music_notification_next_white</drawable>
    <drawable name="ic_music_notification_close">@drawable/ic_music_notification_close_white</drawable>

    <!-- music notification ids-->
    <item name="music_notification_large_icon" type="id"/>
    <item name="music_notification_title" type="id"/>
    <item name="music_notification_text" type="id"/>
    <item name="music_notification_play_toggle" type="id"/>
    <item name="music_notification_play_next" type="id"/>
    <item name="music_notification_play_stop" type="id"/>
    <item name="music_notification_text_layout" type="id"/>
    <item name="music_notification_line" type="id"/>
    <item name="music_notification_buttons" type="id"/>
    <item name="music_notification_play_pre" type="id"/>

    <!-- music notification icon style -->
    <style name="normalNotificationIconStyle">
        <item name="android:background">@drawable/bg_music_notification_item</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46.69998dip</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="normalWhiteNotificationIconStyle" parent="@style/normalNotificationIconStyle">
        <item name="android:background">@drawable/bg_music_notification_item</item>
    </style>


</resources>
