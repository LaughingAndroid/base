<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KibeyAppTheme" parent="@style/KibeyBaseTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="VideoAppTheme" parent="@style/KibeyBaseTheme">
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="KibeyAppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="KibeyAppTheme.WindowTranslucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="KibeyAppTheme.WindowTranslucent.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="KibeyAppTheme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="KibeyBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#00AE05</item>
        <item name="android:typeface">normal</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="BaseDialog" parent="KibeyAppTheme.WindowTranslucent">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="BaseDialog.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- for windowTranslucentStatus -->

    <style name="GuideDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="KibeyAppTheme.NoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!--<style name="FadeAnimation">-->
    <!--<item name="android:windowEnterAnimation">@anim/abc_fade_in</item>-->
    <!--<item name="android:windowExitAnimation">@anim/abc_fade_out</item>-->
    <!--</style>-->

</resources>